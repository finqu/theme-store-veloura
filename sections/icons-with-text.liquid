{% assign textAlign = section.settings.sectionTextAlign %}

{% if textAlign == 'nil' %}
    {% assign textAlign = settings.sectionTextAlign %}
{% endif %}

{%- capture sectionContent -%}

    <div class="row gy-g row-cols-{% if section.settings.setting_blocks.items.size > 3 %}2{% else %}1{% endif %} row-cols-lg-{{ section.settings.setting_blocks.items.size }}">

        {% for item in section.settings.setting_blocks.items %}

            <div class="col d-flex{% if section.settings.setting_blocks.items.size > 3 %} flex-column flex-md-row{% endif %}">

                <div class="w-100 flex-shrink-1 max-w-px-40 text-{{ textAlign }} text-lg-center {% if section.settings.setting_blocks.items.size > 3 %}mb-g mb-md-0 me-md-g{% else %}me-g{% endif %}">

                    {% if item.settings.iconFormat == 'svg' %}
 
                        {% if item.settings.svgContent %}

                            {{- item.settings.svgContent | replace: '<svg ', '<svg class="svg-icon svg-icon-3x" ' -}}

                        {% else %}

                            <div class="aspect-ratio-1-1">

                                <div class="aspect-ratio-container">

                                    {%- capture imgSrc -%}
                                        {% render 'placeholder-svg', type: 'image', base64: true %}
                                    {%- endcapture -%}

                                    <img class="lazy lazy-disable-transition aspect-ratio-item svg-placeholder" alt="{{ item.settings.title }}" data-src="{{ imgSrc | strip }}">

                                </div>

                            </div>

                        {% endif %}
                    
                    {% else %}

                        <div class="aspect-ratio-1-1">

                            <div class="aspect-ratio-container">

                                {% if item.settings.imgSrc %}

                                    <img
                                        alt="{{ item.settings.title }}"
                                        data-src="{{ item.settings.imgSrc | thumb: '40,40' }}"
                                        data-srcset="{{ item.settings.imgSrc | thumb: '40,40' }} 1x,{{ item.settings.imgSrc | thumb: '40,40' | thumb:'@2x' }} 2x"
                                        class="lazy aspect-ratio-item">

                                {% else %}

                                    {%- capture imgSrc -%}
                                        {% render 'placeholder-svg', type: 'image', base64: true %}
                                    {%- endcapture -%}

                                    <img class="lazy lazy-disable-transition aspect-ratio-item svg-placeholder" alt="{{ item.settings.title }}" data-src="{{ imgSrc | strip }}">

                                {% endif %}

                            </div>

                        </div>

                    {% endif %}

                </div>

                <div class="flex-grow-1">

                    {% if item.settings.title %}

                        <span class="text-title d-block fw-bold{% if item.settings.richtext %} mb-2{% endif %}">
                            {{ item.settings.title }}
                        </span>

                    {% endif %}

                    {{ item.settings.richtext }}

                </div>

            </div>

        {% endfor %}

    </div>

{%- endcapture -%}

